{
  "compilerOptions": {
    /* -------------------------------------------------------------
     * üöÄ TARGET ENVIRONMENT
     * ----------------------------------------------------------- */
    "target": "ES2022",                     
    "module": "Node16",                    
    "lib": ["ES2022", "DOM"],               
    "moduleResolution": "node16",           
    "allowSyntheticDefaultImports": true,    
    "esModuleInterop": true,                 
    "resolveJsonModule": true,              
    "types": ["node"],                       

    /* -------------------------------------------------------------
     * üß© PROJECT STRUCTURE
     * ----------------------------------------------------------- */
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@schemas/*": ["kern_schemas/*"]
    },

    /* -------------------------------------------------------------
     * üß† TYPE & CODE QUALITY
     * ----------------------------------------------------------- */
    "strict": true,                         
    "noImplicitAny": false,                 
    "strictNullChecks": true,               
    "noImplicitThis": true,                 
    "alwaysStrict": true,                   
    "forceConsistentCasingInFileNames": true,

    /* -------------------------------------------------------------
     * üõ°Ô∏è SECURITY / SANDBOX OPTIONS
     * ----------------------------------------------------------- */
    "isolatedModules": false,
    "skipLibCheck": true,                   
    "noEmitOnError": true,                  

    /* -------------------------------------------------------------
     * ‚öôÔ∏è OUTPUT BEHAVIOR
     * ----------------------------------------------------------- */
    "sourceMap": true,
    "removeComments": false,
    "declaration": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",

    /* -------------------------------------------------------------
     * üì¶ NODE RUNTIME INTEGRATION
     * ----------------------------------------------------------- */
    "moduleDetection": "force",
    "allowImportingTsExtensions": true
  },

  "include": [
    "kern_runtime.ts",
    "kern_schemas/**/*.json",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],

  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "Node16"
    }
  }
}


{
  "name": "kern-engine-v3",
  "version": "3.0.0",
  "description": "KERN v3 Deterministic Logic Engine with YAML support",
  "main": "kern_runtime_v3_full.ts",
  "scripts": {
    "start": "ts-node kern_runtime_v3_full.ts",
    "dev": "ts-node --watch kern_runtime_v3_full.ts",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "yaml-convert": "node src/yaml_to_kern_bridge.js",
    "sqlite-init": "node src/sqlite-persistence-layer.js init",
    "integration": "node src/integration-example.js",
    "docker:build": "docker build -t kern-engine .",
    "docker:run": "docker-compose up",
    "docker:execute": "docker-compose --profile execute up",
    "docker:batch": "docker-compose --profile batch up"
  },
  "keywords": ["kern", "rules-engine", "deterministic", "yaml", "business-logic"],
  "author": "Maykon Meza",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "js-yaml": "^4.1.0",
    "sqlite3": "^5.1.6",
    "typescript": "^5.3.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/yargs": "^17.0.32",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

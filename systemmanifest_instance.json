{
  "manifest": {
    "metadata": {
      "id": "grant_evaluator_v3",
      "version": "3.0.0",
      "name": "KERN Grant Evaluator Runtime",
      "description": "Deterministic execution engine for evaluating research grants",
      "author": "Maykon Meza"
    },
    "components": {
      "primitives": { "path": "./kern_schemas/v3_primitives.json" },
      "rules": { "path": "./kern_schemas/v3_rulesconfig.json" },
      "invariants": { "path": "./kern_schemas/v3_invariant.json" },
      "execution": { "path": "./kern_schemas/v3_kernexecution.json" },
      "metrics": { "path": "./kern_schemas/v3_metrics.json" },
      "ledger": { "path": "./kern_schemas/v3_mnemeledger.json" },
      "testVectors": { "path": "./kern_schemas/v3_testvector.json" }
    },
    "contracts": {
      "execution": {
        "primitiveSequence": [
          "CONTEXT_SANITIZER",
          "OBJECT_FLATTENER",
          "CONDITION_EVALUATOR",
          "EXPRESSION_EVALUATOR",
          "TEMPLATE_RESOLVER",
          "STATE_MUTATOR",
          "RULE_APPLICATOR",
          "ITERATION_MANAGER"
        ],
        "invariantChecks": {
          "STATE_MUTATOR": ["stateProgress", "consistencyCheck"]
        }
      },
      "validation": {
        "schemaValidation": true,
        "crossComponentValidation": true
      },
      "security": {
        "isolationLevel": "strict",
        "cryptographicRequirements": {
          "signatureVerification": true
        }
      }
    },
    "deployment": {
      "profiles": [
        { "name": "development", "environment": "development" }
      ]
    }
  }
}

